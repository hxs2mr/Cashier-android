<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="lay_divide_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_1</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@color/color_ffffff</item>
    </style>

    <style name="lay_divide_line_e5e5e5_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_1</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@color/color_e5e5e5</item>
    </style>


    <style name="lay_divide_line_vertical">
        <item name="android:layout_width">@dimen/space_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@color/color_ffffff</item>
    </style>

    <style name="lay_divide_line_e5e5e5_vertical">
        <item name="android:layout_width">@dimen/space_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@color/color_e5e5e5</item>
    </style>

    <style name="lay_login_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/color_ffffff</item>
        <item name="android:textSize">@dimen/space_20</item>
        <item name="android:background">@null</item>
    </style>


    <style name="lay_cashier_title_textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_0d0d0d</item>
        <item name="android:textSize">@dimen/space_20</item>
        <item name="android:background">@drawable/ic_cashier_textview_background</item>
    </style>


    <style name="lay_goods_content_textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_0d0d0d</item>
        <item name="android:textSize">@dimen/space_18</item>
        <item name="android:background">@drawable/ic_cashier_textview_background</item>
    </style>



    <style name="lay_goods_title_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_090909</item>
        <item name="android:textSize">@dimen/space_18</item>
    </style>


    <style name="lay_cashier_content_textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_0d0d0d</item>
        <item name="android:textSize">@dimen/space_18</item>
        <item name="android:background">@drawable/ic_cashier_textview_background</item>
    </style>


    <style name="lay_cashier_content_green_textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize">@dimen/space_18</item>
        <item name="android:background">@drawable/ic_cashier_green_textview_background</item>
    </style>

    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/color_00000000</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>




</resources>
