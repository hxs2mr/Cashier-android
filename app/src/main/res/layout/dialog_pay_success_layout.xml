<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/space_400"
    android:layout_height="@dimen/space_600"
    android:background="@drawable/ic_white_background"
    android:gravity="center_horizontal">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_60"
        android:background="@drawable/ic_green_title_background"
        android:gravity="center"
        android:textColor="@color/color_ffffff"
        android:text="@string/pay_success"
        android:textSize="@dimen/space_26"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pay_avater_iv"
        android:layout_marginTop="@dimen/space_30"
        android:layout_width="@dimen/space_120"
        android:layout_height="@dimen/space_120"
        app:civ_border_width="@dimen/space_1"
        app:civ_border_color="@color/color_09c491"
        android:src="@mipmap/icon_default_user"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_60"
        android:layout_marginTop="@dimen/space_20">

        <TextView
            android:id="@+id/pay_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/space_26"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/pay_gender_iv"
            android:layout_toRightOf="@+id/pay_username_tv"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_male"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/pay_gender_tv"
            android:layout_toRightOf="@+id/pay_gender_iv"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/space_26"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


    <TextView
        android:layout_marginTop="@dimen/space_20"
        android:id="@+id/pay_school_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/space_22"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_marginTop="@dimen/space_10"
        android:id="@+id/pay_grade_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/space_22"
        android:layout_centerVertical="true"/>


    <TextView
        android:layout_marginTop="@dimen/space_10"
        android:id="@+id/pay_class_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/space_22"
        android:layout_centerVertical="true"/>



    <TextView
        android:layout_marginTop="@dimen/space_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_f80000"
        android:textSize="@dimen/space_26"
        android:text="@string/print_ticket_is_necessary"
        android:layout_centerVertical="true"/>


    <RelativeLayout
        android:layout_marginTop="@dimen/space_20"
        android:layout_width="@dimen/space_300"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pay_cancle_tv"
            android:layout_width="@dimen/space_100"
            android:layout_height="@dimen/space_50"
            android:background="@drawable/ic_gray_btn_background"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/space_22"
            android:text="@string/cancle"
            android:gravity="center"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/pay_certain_tv"
            android:layout_width="@dimen/space_100"
            android:layout_height="@dimen/space_50"
            android:background="@drawable/ic_green_btn_background"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/space_22"
            android:text="@string/certain"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>